<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Start Menu Text 01 style -->
    <style name="titleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Start Menu Text 02 style -->
    <style name="subtitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- CardView in start menu -->
    <style name="buttonCardView" parent="CardView">
        <item name="cardCornerRadius">@dimen/start_button_corner_radius</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <!-- imprint header -->
    <style name="imprintHeaderText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/imprint_header_text_size</item>
    </style>

    <style name="imprintText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/imprint_text_size</item>
    </style>

</resources>