<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Start Menu Text 01 style -->
    <style name="startTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/start_title_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Start Menu Text 02 style -->
    <style name="startSubtitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/start_subtitle_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- CardView in start menu -->
    <style name="buttonCardView" parent="CardView">
        <item name="cardCornerRadius">@dimen/start_button_corner_radius</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <!-- header -->
    <style name="headerText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <!-- title Text -->
    <style name="titleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>


    <!-- info title Text -->
    <style name="infoTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">@dimen/info_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- subtitle Text -->
    <style name="subtitleText" parent="@style/normalText">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">@dimen/info_subtitle_text_size</item>
    </style>


    <!-- normal Text -->
    <style name="normalText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <!-- map Title Text -->
    <style name="mapTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>


    <!-- map normal Text -->
    <style name="mapNormalText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>


    <!-- answer option -->
    <style name="answerOptionText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/answer_option_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>






</resources>